<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/fon</item>
        <item name="colorButtonNormal">#449def</item>
        <item name="colorSwitchThumbNormal">#026DA7</item>
        <item name="colorAccent">#026DA7</item>
       <item name="android:buttonStyle">@style/ButtonAppTheme</item>
        <item name="textView1">@style/blue_text_view_1</item>
        <item name="textView2">@style/blue_text_view_2</item>
        <item name="drawerArrowStyle">@drawable/ic_action_back</item>
        <item name="colorControlNormal">#026DA7</item>
        <item name="colorControlActivated">#026DA7</item>
        <item name="colorControlHighlight">#026DA7</item>


        <item name="android:alertDialogTheme">@style/DialogStyle</item>
    </style>
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/light</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:background">@color/light</item>
    </style>
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/light</item>
        <item name="android:textColorPrimary">#026DA7</item>
        <item name="android:textColorSecondary">#026DA7</item>
    </style>
    <style name="ButtonAppTheme" parent="Widget.AppCompat.Light.ActionButton">
    <item name="android:background">@drawable/blue_button</item>
    <item name="android:textColor">#FFFFFF</item>
</style>
    <style name="blue_text_view_1">
        <!-- <item name="android:textColor">#0082ca</item>  -->
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#DDD</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="blue_text_view_2">
        <!-- <item name="android:textColor">#0082ca</item>  -->
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#DDD</item>
    </style>
</resources>